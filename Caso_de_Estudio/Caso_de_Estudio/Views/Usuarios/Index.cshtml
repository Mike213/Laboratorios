@model IEnumerable<Caso_de_Estudio.Models.Usuario>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    @using (Html.BeginForm("Index", "Usuarios", FormMethod.Post))
    {
        <div class="mt-3 container">
            <div class="row" style="text-align:right; float:right;">
                <div class="input-group mr-3">
                    @Html.TextBox("buscar", "", new { @class = "form-control" })
                    <button type="submit" class="btn btn-dark">Buscar</button>
                </div>
            </div>
        </div>
    }
    <div class="container mt-5">

        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.username)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.email)
                    </th> 
                    <th>
                        @Html.DisplayNameFor(model => model.nombres)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.apellidos)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Estado1.nombreEst)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Rol.rolName)
                    </th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.username)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.email)
                    </td> 
                    <td>
                        @Html.DisplayFor(modelItem => item.nombres)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.apellidos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estado1.nombreEst)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rol.rolName)
                    </td>
                    <td>
                        <span style="cursor:pointer;" title="Ver detalles"><a href="@Url.Action("Details", "Usuarios", new { id = item.idUser })" style="color:black;"><i class="fas fa-eye"></i></a></span>
                        <span style="cursor:pointer;" title="Editar"><a href="@Url.Action("Edit", "Usuarios", new { id = item.idUser  })" style="color:black;"><i class="fas fa-edit"></i></a></span>
                        <span style="cursor:pointer;" title="Eliminar"><a href="@Url.Action("Delete", "Usuarios", new { id = item.idUser  })" style="color:darkred;"><i class="fas fa-trash"></i></a></span>
                        <span style="cursor:pointer;" title="Exportar a PDF"><a href="@Url.Action("Reporte", "Usuarios", new { id = item.idUser  })" style="color:black;"><i class="fas fa-file-export"></i></a></span>
                    </td>
                </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.username)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.email)
                    </th>
                    
                    <th>
                        @Html.DisplayNameFor(model => model.nombres)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.apellidos)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Estado1.nombreEst)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Rol.rolName)
                    </th>
                    <th>Acciones</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div> 