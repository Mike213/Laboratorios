@model Caso_de_Estudio.Models.Reservacion

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="card">

    <div class="card-header mt-2 mb-2">
        <h3 vlass="card-text text-center">Reservar computadora</h3>
    </div>

    <div class="form-horizontal card-body ">


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group mt-3 ">
            @Html.LabelFor(model => model.tipoR, "tipoR", htmlAttributes: new { @class = "control-label col-12" })
            <div class="col-12">
                @Html.DropDownList("tipoR", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.tipoR, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group  ">
            @Html.LabelFor(model => model.pcReservacion, htmlAttributes: new { @class = "control-label col-12" })
            <div class="col-12">
                @Html.DropDownList("pcReservacion", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.pcReservacion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group  ">
            @Html.LabelFor(model => model.fecha, htmlAttributes: new { @class = "control-label col-12" })
            <div class="col-12">
                @Html.EditorFor(model => model.fecha, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                @Html.ValidationMessageFor(model => model.fecha, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group  ">
            @Html.LabelFor(model => model.horaEntrada, htmlAttributes: new { @class = "control-label col-12" })
            <div class="col-12">
                @Html.EditorFor(model => model.horaEntrada, new { htmlAttributes = new { @class = "form-control ", type = "time" } })
                @Html.ValidationMessageFor(model => model.horaEntrada, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.horaSalida, htmlAttributes: new { @class = "control-label col-12" })
            <div class="col-12">
                @Html.EditorFor(model => model.horaSalida, new { htmlAttributes = new { @class = "form-control", type = "time" } })
                @Html.ValidationMessageFor(model => model.horaSalida, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.observacion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-12">
                @Html.EditorFor(model => model.observacion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.observacion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-12">
                <input type="submit" value="Guardar" class="btn btn-primary btn-block" />
            </div>
        </div>
        <div class="form-group mb-3">
            <div class="col-md-offset-2 col-12" style="position:relative; left:45%;">
                <a class="text-center" href="@Url.Action("Index", "Reservacions")">Volver</a>
            </div>
        </div>
    </div>

</div>
}

 
