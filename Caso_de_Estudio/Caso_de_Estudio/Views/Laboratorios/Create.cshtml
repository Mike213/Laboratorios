@model Caso_de_Estudio.Models.Laboratorio

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="card">
        <div class="card-header mt-2 mb-2">
            <h3 vlass="card-text text-center">Registrar nuevo laboratorio</h3>
        </div>
            <div class="form-horizontal card-body">
        
               @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group mt-5">
                @Html.LabelFor(model => model.nombreLab, htmlAttributes: new { @class = "control-label col-12" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.nombreLab, new { htmlAttributes = new { @class = "form-control" , placeholder="Ingrese el nombre del laboratorio"} })
                    @Html.ValidationMessageFor(model => model.nombreLab, "", new { @class = "text-danger" })
                </div>
            </div>

       

        <div class="form-group mt-5">
            <div class="col-md-offset-2 col-12">
                <input type="submit" value="Guardar" class="btn btn-block btn-primary" />
            </div>
        </div>
    </div>
    </div>
}

 
