@model Caso_de_Estudio.Models.Usuario

@{
    ViewBag.Title = "Registro";
    Layout = "~/Views/Shared/_Layout-login.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()




<div class="main-card mb-3   card   border" style="position:relative;left:25%;width:50%;">
    <div class="card-header">

        <label class="card-title mt-3" style="font-size:25px;position:relative;left:20%;">Registro de usuarios</label>

    </div>
    <div class="card-body   ">
       

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group mt-3">
            <div class="col-12">
                
                <label>Nombre de usuario</label>
                @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-12">

                <label>Correo Electrónico</label>

                @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control", type = "email" } })
                @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-12">

                <label> Contraseña    </label>
                @Html.EditorFor(model => model.pwd, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                @Html.ValidationMessageFor(model => model.pwd, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <div class="col-12">

                <label> Nombres    </label>
                @Html.EditorFor(model => model.nombres, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nombres, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">

            <div class="col-12">
                <label>  Apellidos   </label>
                @Html.EditorFor(model => model.apellidos, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.apellidos, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.HiddenFor(model => model.idRol, new { @Value = 1 })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-10">
                @Html.HiddenFor(model => model.estado, new { @Value = 1 })
            </div>
        </div>

        <div class="form-group">
            <div class="mt-3 col-12">
                <input type="submit" value="Registrar" class="btn btn-block btn-primary" />
            </div>
        </div>
    </div>

</div>

     
}

 